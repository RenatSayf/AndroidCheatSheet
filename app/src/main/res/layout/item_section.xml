<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <View
        android:id="@+id/view_point"
        android:layout_width="6dp"
        android:layout_height="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_header"
        app:layout_constraintEnd_toStartOf="@+id/tv_header"
        app:layout_constraintBottom_toBottomOf="@+id/tv_header"
        android:layout_marginStart="8dp"
        android:background="@drawable/shape_circle_black"/>

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/view_point"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="0dp"
        android:padding="12dp"
        tools:text="Section Header"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:background="@drawable/ripple_main"
        />

    <View
        android:id="@+id/view_separator"
        android:layout_width="0dp"
        android:layout_height="0.4dp"
        android:alpha="0.5"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        app:layout_constraintStart_toStartOf="@+id/tv_header"
        app:layout_constraintEnd_toEndOf="@+id/tv_header"
        android:layout_marginStart="12dp"
        android:background="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>